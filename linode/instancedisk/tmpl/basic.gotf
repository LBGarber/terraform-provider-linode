{{ define "instance_disk_basic" }}

resource "linode_instance" "foobar" {
    label = "{{ .Label }}"
    type = "g6-nanode-1"
    region = "us-southeast"
}

resource "linode_instance_disk" "foobar" {
  label = "boot"
  linode_id = linode_instance.foobar.id
  size = linode_instance.foobar.specs.0.disk
}

{{ end }}