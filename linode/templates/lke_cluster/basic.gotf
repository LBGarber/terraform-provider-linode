{{ define "lke_cluster_basic" }}
resource "linode_lke_cluster" "test" {
    label       = "{{.Label}}"
    region      = "us-central"
    k8s_version = "1.20"
    tags        = ["test"]

    pool {
        type  = "g6-standard-2"
        count = 3
    }
}
{{end}}

{{ define "lke_cluster_basic_updates" }}
resource "linode_lke_cluster" "test" {
    label       = "{{.Label}}"
    region      = "us-central"
    k8s_version = "1.20"
    tags        = ["test", "new_tag"]

    pool {
        type  = "g6-standard-2"
        count = 4
    }
}
{{end}}