{{ define "instance_interface" }}
resource "linode_instance" "foobar" {
    label = "{{.Label}}"
    group = "tf_test"
    type = "g6-nanode-1"
    region = "us-southeast"
    image = "linode/alpine3.13"

    interface {
        purpose = "vlan"
        label = "tf-really-cool-vlan"
    }
}
{{ end }}

